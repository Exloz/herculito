rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Rutinas compartidas: lectura para todos, escritura para creador
    match /routines/{routineId} {
      // Todos los usuarios autenticados pueden leer rutinas p√∫blicas o rutinas sin el campo isPublic (compatibilidad)
      allow read: if request.auth != null 
        && (
          resource.data.isPublic == true 
          || !('isPublic' in resource.data) // rutinas existentes sin isPublic
          || request.auth.uid == resource.data.createdBy 
          || request.auth.uid == resource.data.userId // compatibilidad con rutinas viejas
        );
      
      // Permitir crear rutinas con createdBy
      allow create: if request.auth != null 
        && request.auth.uid == request.resource.data.createdBy;
      
      // Permitir crear rutinas con userId (compatibilidad)
      allow create: if request.auth != null 
        && request.auth.uid == request.resource.data.userId;
      
      // Solo el creador puede editar o eliminar (usar createdBy o userId)
      allow update, delete: if request.auth != null 
        && (
          request.auth.uid == resource.data.createdBy 
          || request.auth.uid == resource.data.userId
        );
        
      // Permitir incrementar timesUsed a cualquier usuario autenticado
      allow update: if request.auth != null 
        && request.resource.data.diff(resource.data).affectedKeys() == ['timesUsed'].toSet();
    }

    match /workoutSessions/{sessionId} {
      allow read, write, delete: if request.auth != null 
        && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null 
        && request.auth.uid == request.resource.data.userId;
    }

    match /exerciseHistory/{historyId} {
      allow read, write, delete: if request.auth != null 
        && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null 
        && request.auth.uid == request.resource.data.userId;
    }

    match /exerciseLogs/{logId} {
      allow read, write, delete: if request.auth != null 
        && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null 
        && request.auth.uid == request.resource.data.userId;
    }

    // Reglas simplificadas para ejercicios
    match /exerciseTemplates/{templateId} {
      // Cualquier usuario autenticado puede leer todos los ejercicios
      allow read: if request.auth != null;
      
      // Cualquier usuario autenticado puede crear ejercicios
      allow create: if request.auth != null;
      
      // Cualquier usuario autenticado puede actualizar ejercicios (para timesUsed)
      allow update: if request.auth != null;
      
      // Solo el creador puede eliminar
      allow delete: if request.auth != null 
        && request.auth.uid == resource.data.createdBy;
    }
  }
}